<FlashcardScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: [10, 10, 10, 10]
        spacing: 10

        # Input fields for question and answer
        TextInput:
            id: flashcard_question_input
            hint_text: "Enter Question"
            multiline: False
        TextInput:
            id: flashcard_answer_input
            hint_text: "Enter Answer"
            multiline: False

        # Button to add a flashcard
        Button:
            text: "Add Flashcard"
            on_press: root.add_flashcard(flashcard_question_input.text, flashcard_answer_input.text)

        # Display current question and answer
        Label:
            id: flashcard_question
            text: "No flashcards yet!"
            font_size: 20
            color: [1, 1, 1, 1]  # White text

        Label:
            id: flashcard_answer
            text: ""
            font_size: 18
            color: [1, 1, 1, 1]  # White text

        # Buttons for flipping and navigating
        BoxLayout:
            orientation: "horizontal"
            spacing: 10

            Button:
                text: "Flip"
                on_press: root.flip_flashcard()

            Button:
                text: "Next"
                on_press: root.next_flashcard()
